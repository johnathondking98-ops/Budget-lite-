# Memory optimization for npm
# Reduce memory usage during npm install

# Use fewer concurrent connections to reduce memory
maxsockets=5

# Enable progress bar (helps monitor long operations)
progress=true

# Use package-lock for faster, more reliable installs
package-lock=true

# Prefer offline mode when packages are cached
prefer-offline=true

# Reduce logging to save memory
loglevel=warn

# Disable fund messages to reduce overhead
fund=false

# Disable update notifications to reduce overhead
update-notifier=false
